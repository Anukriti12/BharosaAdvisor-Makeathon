    <LinearLayout
        android:id="@+id/on_boarding_layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_gravity="center_horizontal|center">

            <ImageView
                android:id="@+id/bharosalogo"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:src="@drawable/bharosalogo_black"
                tools:ignore="ContentDescription" /><!--22a7f4-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="15sp"
                android:layout_toEndOf="@+id/bharosalogo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:maxLines="1"
                    android:text="@string/bharosa_advisor"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bharosa_motto"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/on_boarding_login_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/on_boarding_login_mobile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_no"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/on_boarding_login_mobile_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/on_boarding_login_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/on_boarding_login_password_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg"
            android:inputType="textPassword"
            android:labelFor="@id/on_boarding_login_password_input"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:visibility="gone"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/on_boarding_login_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:alpha="0.5"
            android:background="@drawable/btn_bg"
            android:enabled="false"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>


        <Button
        android:id="@+id/on_boarding_forgot_password_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:background="@color/colorTransparent"
        android:gravity="center|center_horizontal|center_vertical"
        android:maxLines="1"
        android:text="@string/forgot_password"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/on_boarding_login_estimate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60sp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="3dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:drawablePadding="25dp"
                    android:drawableStart="@drawable/ic_estimate"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/estimate"
                    android:textSize="22sp" />

            </android.support.v7.widget.CardView>
            <View
            android:layout_width="1dp"
            android:layout_height="60sp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="3sp"
            android:alpha="0.5"
            android:background="@android:color/darker_gray" />
            <android.support.v7.widget.CardView
                android:id="@+id/learn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60sp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="3dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:drawablePadding="25dp"
                    android:drawableStart="@drawable/ic_book"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/learn"
                    android:textSize="22sp" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/on_boarding_signup_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTransparent"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:text="@string/signup_now"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/on_boarding_intro_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:visibility="gone"
        android:background="@color/colorPrimary">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/on_boarding_intro_money"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="money.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/on_boarding_intro_text"
            android:layout_below="@id/on_boarding_intro_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="@string/triple_your_money_in_ten_years"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"/>
        
        <Button
            android:id="@+id/on_boarding_intro_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/get_started"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </RelativeLayout>
